@page
@model WarehouseManagement.Web.Pages.Directories.Units.ArchiveModel
@{
    ViewData["Title"] = "Единицы измерения - архив";
}

<div class="page-title">
    <a asp-page="Main" class="add-btn">К рабочим</a>
</div>

<table class="units-table" border="1">
    <thead>
        <tr>
            <th>Наименование</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var unit in Model.Units)
        {
            <tr onclick="window.location.href='@Url.Page("/Directories/Units/Form", new { id = unit.Id })'">
                <td>@unit.Currency</td>
            </tr>
        }
    </tbody>
</table>