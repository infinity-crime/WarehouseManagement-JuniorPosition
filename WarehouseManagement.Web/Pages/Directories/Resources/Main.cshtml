@page
@model WarehouseManagement.Web.Pages.Directories.Resources.MainModel
@{
    ViewData["Title"] = "Ресурсы";
}

<div class="page-title">
    <a asp-page="Form" asp-route-id="@Guid.Empty" class="add-btn">Добавить</a>
    <a asp-page="Archive" class="add-btn">К архиву</a>
</div>

<table class="units-table" border="1">
    <thead>
        <tr>
            <th>Наименование</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var resource in Model.Resources)
        {
            <tr onclick="window.location.href='@Url.Page("/Directories/Resources/Form", new { id = resource.Id })'">
                <td>@resource.Name</td>
            </tr>
        }
    </tbody>
</table>